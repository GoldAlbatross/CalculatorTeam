<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:dither="true"
            android:shape="rectangle">
            <corners android:radius="18dp" />
            <gradient
                android:centerX="70%"
                android:centerY="70%"
                android:angle="135"
                android:endColor="@color/white"
                android:centerColor="@color/appColorCenter"
                android:startColor="@color/appColor"
                android:type="linear" />
            <stroke
                android:color="@color/dark_gray"
                android:width="0.6dp" />
        </shape>
    </item>

</selector>